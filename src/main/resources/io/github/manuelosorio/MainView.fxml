<?xml version="1.0" encoding="UTF-8"?>

<!--Setup primary javafx view-->

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="io.github.manuelosorio.controls.MainController">

    <center>
        <TableView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn prefWidth="200" text="Word" />
                <TableColumn minWidth="0.0" prefWidth="200" text="Frequency" />
            </columns>
        </TableView>
    </center>
   <bottom>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
            <TextField maxWidth="350.0" minWidth="100.0" prefWidth="220.0" />
            <Region prefHeight="25.0" prefWidth="200.0" />
          <Button mnemonicParsing="false" text="Button" onMouseClicked="#handleButtonAction" />
        </items>
      </ToolBar>
   </bottom>
</BorderPane>
